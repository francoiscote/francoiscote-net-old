---
  layout: "layouts/page.njk"
  title: "Blog"
---

<ul>
  {% for post in collections.posts | reverse %}
      <h4 class="post-card">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <span class="post-card__time">
          (<time datetime="{{ post.data.date | w3DateFilter }}">{{ post.data.date | dateFilter }}</time>)
        </span> 
      </h4>
  {% endfor %}
</ul>